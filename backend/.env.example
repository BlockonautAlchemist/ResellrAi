# ResellrAI Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Supabase Configuration
# ===================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=

# anon/public key - safe for client-side
SUPABASE_ANON_KEY=

# service_role key - SERVER ONLY, keep secret!
SUPABASE_SERVICE_KEY=

# ===================
# OpenRouter Configuration  
# ===================
# Get your key from: https://openrouter.ai/keys

OPENROUTER_API_KEY=

# Models to use (can be changed based on cost/quality tradeoff)
OPENROUTER_VISION_MODEL=google/gemini-3-pro-preview
OPENROUTER_TEXT_MODEL=google/gemini-3-flash-preview

# ===================
# eBay Integration (Optional)
# ===================
# Get these from: https://developer.ebay.com/my/keys
# Start with Sandbox keys for development

# eBay App credentials
EBAY_CLIENT_ID=
EBAY_CLIENT_SECRET=

# eBay RuName (Redirect URL name) - configure in eBay Developer Portal
EBAY_RUNAME=

# Environment: 'sandbox' or 'production'
EBAY_ENVIRONMENT=sandbox

# Token encryption key - REQUIRED for storing OAuth tokens
# Generate with: openssl rand -hex 32
EBAY_TOKEN_ENCRYPTION_KEY=

# ===================
# App URLs
# ===================
# Base URL for OAuth callbacks (your server's public URL)
APP_BASE_URL=http://localhost:3000

# Mobile app deep link scheme (for OAuth redirects)
MOBILE_DEEP_LINK_SCHEME=resellrai

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=development
