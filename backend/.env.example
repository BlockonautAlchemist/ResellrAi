# ResellrAI Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Supabase Configuration
# ===================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=

# anon/public key - safe for client-side
SUPABASE_ANON_KEY=

# service_role key - SERVER ONLY, keep secret!
SUPABASE_SERVICE_KEY=

# ===================
# OpenRouter Configuration  
# ===================
# Get your key from: https://openrouter.ai/keys

OPENROUTER_API_KEY=

# Models to use (can be changed based on cost/quality tradeoff)
OPENROUTER_VISION_MODEL=google/gemini-3-pro-preview
OPENROUTER_TEXT_MODEL=google/gemini-3-flash-preview

# ===================
# eBay Integration (Optional)
# ===================
# Get these from: https://developer.ebay.com/my/keys
# Start with Sandbox keys for development

# eBay App credentials
EBAY_CLIENT_ID=
EBAY_CLIENT_SECRET=

# eBay RuName (Redirect URL name)
# ⚠️ IMPORTANT: You must configure this in eBay Developer Portal!
#
# Steps to set up RuName:
# 1. Go to https://developer.ebay.com/my/keys
# 2. Click "User Tokens" next to your Sandbox (or Production) keyset
# 3. Under "Auth Accepted URL", enter: {APP_BASE_URL}/api/v1/ebay/oauth/callback
#    Example: https://your-server.ngrok.io/api/v1/ebay/oauth/callback
# 4. Under "Auth Declined URL", enter the same URL
# 5. Save and copy the generated RuName value here
#
# If RuName is not configured correctly, users will see eBay's "Thank You" page
# instead of being redirected back to the app after authorization.
EBAY_RUNAME=

# Environment: 'sandbox' or 'production'
EBAY_ENVIRONMENT=sandbox

# Token encryption key - REQUIRED for storing OAuth tokens
# Generate with: openssl rand -hex 32
EBAY_TOKEN_ENCRYPTION_KEY=

# ===================
# App URLs
# ===================
# Base URL for OAuth callbacks (your server's public URL)
# For local development with ngrok: https://xxxx.ngrok.io
# For production: https://api.yourapp.com
#
# ⚠️ This URL must match what you configured in eBay's RuName settings!
APP_BASE_URL=http://localhost:3000

# Mobile app deep link scheme (for OAuth redirects back to app)
# This is registered in the mobile app's config
MOBILE_DEEP_LINK_SCHEME=resellrai

# Expo Go dev URL for OAuth redirects (DEVELOPMENT ONLY)
# Set this when developing with Expo Go to enable OAuth redirect
# Format: exp://YOUR_LOCAL_IP:PORT (no trailing slash)
# Example: exp://192.168.1.50:8081
# The redirect will use: exp://192.168.1.50:8081/--/oauth/success?provider=ebay
# Leave empty/unset for production builds (will use MOBILE_DEEP_LINK_SCHEME instead)
EXPO_DEV_URL=

# ===================
# Stripe Billing
# ===================
# Get these from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PREMIUM_PRICE_ID=
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=
STRIPE_PORTAL_RETURN_URL=

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=development
